<h2>Авторизация</h2>
<div>
    <input type="text" name="username" id="username" placeholder='юзернейм'><br>
    <input type='password' name='password' id='password' placeholder='пароль'><br>
    <lable><input type='checkbox' name='remember' id='remember'>Запомнить меня</lable><br>
    <input type='submit' value='Войти' id='btn'>
</div>
<div id='status'></div>
<script>
    const btn = document.getElementById('btn');
    btn.addEventListener('click', () => {
        const data = {
            username: document.getElementById('username').value,
            password: document.getElementById('password').value,
            remember: document.getElementById('remember').value
        };
        fetch('/auth', {  
            method: 'post',  
            headers: {
                "Content-type": "application/json"  
            },  
            body: JSON.stringify(data)
        })
        .then((response) => response.text())
        .then((data) => {
            const div = document.getElementById('status');
            div.innerHTML = data
        })
    })
</script>